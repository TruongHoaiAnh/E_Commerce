@model App.Model.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPro" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCate" class="control-label"></label>
                <select asp-for="IdCate" class="form-control" asp-items="ViewBag.IdCate"></select>
                <span asp-validation-for="IdCate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAcc" class="control-label"></label>
                <select asp-for="IdAcc" class="form-control" asp-items="ViewBag.IdAcc"></select>
                <span asp-validation-for="IdAcc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusPro" class="control-label"></label>
                <input asp-for="StatusPro" class="form-control" />
                <span asp-validation-for="StatusPro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
