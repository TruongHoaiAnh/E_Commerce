@model IEnumerable<App.Model.User>

@{
    ViewData["Title"] = "Seller manage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Seller manage</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> @Html.DisplayNameFor(model => model.UserName) </th>
                        <th> @Html.DisplayNameFor(model => model.FullName) </th>
                        <th> @Html.DisplayNameFor(model => model.DateCreate) </th>
                        <th> @Html.DisplayNameFor(model => model.LastLogin) </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                       
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                <td> @Html.DisplayFor(modelItem => item.UserName) </td>
                                <td> @Html.DisplayFor(modelItem => item.FullName) </td>
                                <td> @Html.DisplayFor(modelItem => item.DateCreate) </td>
                                <td> @Html.DisplayFor(modelItem => item.LastLogin) </td>
                                <td>
                                    
                                    @if(item.Status == 1)
                                    {
                                        <a type="button" class="btn btn-rounded text-white text-decoration-none btn-rounded btn-gradient-dark btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a type="button" class="btn btn-rounded text-white text-decoration-none btn-rounded btn-gradient-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a type="button" class="btn btn-rounded text-white text-decoration-none btn-rounded btn-gradient-danger btn-sm" asp-action="Disable" asp-route-id="@item.Id">Disable</a>
                                    } else if (item.Status == 0)
                                    {
                                        <form asp-action="Activation" asp-route-id="@item.Id">
                                            <input type="hidden" asp-for="@item.Id" />
                                            <input type="submit" value="Activation" class="btn btn-danger" /> 
                                        </form>
                                    }

                                </td>
                            </tr>


                        
                        }

                </tbody>
            </table>
        </div>
    </div>
</div>
